{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!**/routeTree.gen.ts", "!src/styles/app.css"]
	},
	"formatter": { "enabled": true, "indentStyle": "tab" },
	"linter": {
		"enabled": true,
		"includes": ["!src/components/{ui,magicui}/**/*.tsx"],
		"rules": {
			"recommended": true,
			"nursery": { "useUniqueElementIds": "off" }
		}
	},
	"javascript": { "formatter": { "quoteStyle": "double" } },
	"assist": {
		"enabled": true,
		"actions": { "source": { "organizeImports": "on" } }
	}
}
